{% extends 'base.html.twig' %}


{% block body %}

{% for post in posts %}
    
        <h2>
            {{ post.title }}
            {% if app.user %}
                <a href="{{ path('app_profile_edit', {'id': post.id}) }}">Edit</a> #}
               {# <a href="{{ path('get_post', {'id': post.id}) }}">Show</a> #}
            {% endif %}

        </h2>
        <p>
            {{ post.content }}
        </p>
        {% if post.author %}
            <p>
                {{ post.author.firstname }}
            </p>
        {% endif %}

    {% endfor %}

{% endblock %}
